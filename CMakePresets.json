{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "firmware",
      "displayName": "Firmware (AVR)",
      "description": "ATtiny85 firmware build",
      "inherits": "base"
    },
    {
      "name": "tests",
      "displayName": "Unit Tests (Native)",
      "description": "Host build with Unity test framework",
      "inherits": "base",
      "cacheVariables": {
        "BUILD_TESTS": "ON"
      }
    },
    {
      "name": "sim",
      "displayName": "Simulator (Native)",
      "description": "Interactive native simulator with terminal UI",
      "inherits": "base",
      "cacheVariables": {
        "BUILD_SIM": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "firmware",
      "configurePreset": "firmware",
      "displayName": "Build Firmware"
    },
    {
      "name": "tests",
      "configurePreset": "tests",
      "displayName": "Build Tests"
    },
    {
      "name": "sim",
      "configurePreset": "sim",
      "displayName": "Build Simulator"
    }
  ],
  "testPresets": [
    {
      "name": "tests",
      "configurePreset": "tests",
      "displayName": "Run Unit Tests",
      "output": {
        "verbosity": "default"
      }
    }
  ]
}
